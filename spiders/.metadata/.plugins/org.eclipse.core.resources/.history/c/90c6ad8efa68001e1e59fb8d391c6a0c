package org.jsp;

public class StringProgram {
	public static void main(String[] args) {
		String n="banga";
		String n1="i am in bangalore";
		String[] arr=n1.split(n1);
		int count=0;
//		for(String a:arr) {
//			int a1=a.length();
			for(int i=0;i<=n1.length()-2;i++) {
				if(n1.charAt(i)=='b'&&n1.charAt(i+1)=='a'&&n1.charAt(i+2)=='n'&&n1.charAt(i+3)=='g') {
					count=i;
				}
				
			}
			if(count==0) {
				System.out.println(-1);
			}
			else {
				System.out.println(count);
			}
			
//		}
	}

}
