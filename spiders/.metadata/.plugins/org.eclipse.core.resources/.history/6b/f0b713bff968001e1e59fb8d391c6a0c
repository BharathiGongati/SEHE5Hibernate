package org.jsp;

public class StringProgram {
	public static void main(String[] args) {
		String n="bang";
		String n1="i am in bangalore";
		String[] arr=n1.split(n1);
		for(String a:arr) {
			int a1=a.length();
			for(int i=0;i<=a1-2;i++) {
				if(a.charAt(i)=='b'&&a.charAt(i+1)=='a'&&a.charAt(i+2)=='n'&&a.charAt(i+3)=='g') {
					System.out.println(i);
				}
				else {
					System.out.println(-1);
				}
			}
			
		}
	}

}
